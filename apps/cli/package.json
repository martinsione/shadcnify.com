{
  "name": "shadcnify",
  "version": "0.0.6",
  "description": "CLI for publishing components to Shadcnify registries",
  "type": "commonjs",
  "bin": {
    "shadcnify": "./bin/shadcnify"
  },
  "files": [
    "scripts",
    "bin",
    "README.md"
  ],
  "keywords": [
    "shadcn",
    "ui",
    "components",
    "registry",
    "cli"
  ],
  "author": "Martin Sione",
  "license": "MIT",
  "homepage": "https://shadcnify.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/martinsione/shadcnify.com",
    "directory": "apps/cli"
  },
  "bugs": {
    "url": "https://github.com/martinsione/shadcnify.com/issues"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js || echo 'Skipping binary download'",
    "build": "bun build --compile --minify --sourcemap src/index.tsx --outfile dist/shadcnify",
    "dev": "bun run --watch src/index.tsx",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentui/core": "^0.1.39",
    "@opentui/react": "^0.1.39",
    "fuse.js": "^7.1.0",
    "ignore": "^7.0.5",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "3.6.2",
    "typescript": "5.9.3"
  }
}
