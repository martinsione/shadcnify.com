#!/usr/bin/env node

const { spawn } = require("child_process");
const path = require("path");
const fs = require("fs");

// Get the platform-specific binary name (always use .exe suffix to avoid conflicts)
const platform = process.platform;
const binaryPath = path.join(__dirname, "shadcnify.exe");

// Check if binary exists
if (!fs.existsSync(binaryPath)) {
  console.error("Error: shadcnify binary not found.");
  console.error("Expected location:", binaryPath);
  console.error("\nThe postinstall script may have failed.");
  console.error("Try reinstalling: npm install -g shadcnify");
  console.error("\nOr download manually from:");
  console.error("https://github.com/martinsione/shadcnify.com/releases");
  process.exit(1);
}

// Execute the binary with all arguments
const child = spawn(binaryPath, process.argv.slice(2), {
  stdio: "inherit",
  windowsHide: true,
});

child.on("exit", (code, signal) => {
  if (signal) {
    process.kill(process.pid, signal);
  } else {
    process.exit(code);
  }
});

